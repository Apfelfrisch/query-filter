{
    "name": "apfelfrisch/query-filter",
    "description": "A Framework agnostic query filter that sorts and filters queries using URL parameters",    
    "license": "MIT",
    "require": { 
        "php": "~8.1.0 || ~8.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "symfony/var-dumper": "^5.2",
        "phpstan/phpstan": "^1.9",
        "phpstan/phpstan-phpunit": "^1.2",
        "illuminate/database": "^9.43",
        "doctrine/dbal": "^3.5",
        "infection/infection": "^0.26.16",
        "friendsofphp/php-cs-fixer": "^3.14"
    },
    "autoload": {
        "psr-4": {
            "Apfelfrisch\\QueryFilter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Apfelfrisch\\QueryFilter\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "infection/extension-installer": true
        }
    }
}
