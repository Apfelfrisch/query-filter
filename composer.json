{
    "name": "apfelfrisch/query-filter",
    "description": "A Framework agnostic query filter that sorts and filters queries using URL parameters",
    "license": "MIT",
    "require": {
        "php": "~8.3.0 || ~8.4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.88",
        "illuminate/database": "^12.32",
        "infection/infection": "^0.31.2",
        "symfony/var-dumper": "^7.3",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^12.4",
        "doctrine/dbal": "^4.3",
        "doctrine/orm": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Apfelfrisch\\QueryFilter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Apfelfrisch\\QueryFilter\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "infection/extension-installer": true
        }
    }
}
